@page
@model BazaarWebApp.Pages.ShelfRequestModel
@{
    ViewData["Title"] = "Shelf Request";
}
@if (ViewData["Message"] != null)
{
    <div class="alert alert-success">@ViewData["Message"]</div>
}

@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger">@ViewData["Error"]</div>
}
<h1>Submit ShelfRequest</h1>

<form method="post" class="form-group">
    <div class="mb-3">
        <label class="form-label">Item Id</label>
        <input asp-for="temporaryDataShelfRequest.ItemId" class="form-control">
        <span asp-validation-for="temporaryDataShelfRequest.ItemId"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Quantity</label>
        <input asp-for="temporaryDataShelfRequest.Quantity" class="form-control">
        <span asp-validation-for="temporaryDataShelfRequest.Quantity"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit Request</button>
</form>